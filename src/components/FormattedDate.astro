---
import type { Multi } from "@types";
import { defaultLang } from "@i18n/ui";

interface Props {
	date: Date;
}

const locale: keyof Multi = Astro.currentLocale || defaultLang;
const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
