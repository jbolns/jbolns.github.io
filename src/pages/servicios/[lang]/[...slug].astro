---
// IMPORTS
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "@layouts/BlogPost.astro";

// ACTIONS
// Additional types
type Service = CollectionEntry<"servicios">

// Dynamic routing
export async function getStaticPaths() {
	
	// Get services
  const services: Service[] = (await getCollection("servicios"));
	
	// Return appropriate service
	const paths = services.map((service: Service) => {
		return {
			params: { lang: service.slug.split("/")[0], slug: service.slug.split("/")[1] },
			props: service,
		};
	});

	return paths;
}

// Assemble info to send to rendering layout
const service: Service = Astro.props;
const { Content } = await service.render();

---

<BlogPost {...service.data}>
	<Content />
</BlogPost>
