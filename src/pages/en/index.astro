---
// IMPORTS
import type { Multi } from "@types";
import BaseLayout from "@layouts/BaseLayout.astro";
import LogoRender from "@components/LogoRender.astro";
import Latest from "@components/Latest.astro";
import Contact from "@components/Contact.astro";
import { site } from "@i18n/sections";
import { defaultLang } from "@i18n/ui";

// ACTIONS
// Get locale from folder structure
const locale: keyof Multi = Astro.currentLocale || defaultLang;

// Other
const stack = ["astro", "js", "typescript", "mdx", "tailwind", "threejs"];
---

<BaseLayout
  siteTitle={site.title[locale]}
  description={site.description[locale]}
  pageTitle="Welcome to my website üëã"
  locale={locale}
>
  <section class="homepage">
    <div>
      <p class="my-0">
        <span class="text-3xl">
          My name is <strong
            ><span class="underline">Jos√© A Bolanos</span></strong
          >,</span
        > developer/analyst with 3 years of software development experience and 5+
        additional years of rigorous research and analytics experience.
      </p>
    </div>

    <div class="md:flex gap-8 items-center intersect">
      <span class="flex-initial w-[100%] grow text-2xl">
        <h2 class="mb-0 leading-tight">
          <strong><span class="highlight c3">I love coding.</span></strong>
        </h2>
        <h3 class="hidden leading-tight md:block">It gives me peace.</h3>
      </span>
      <span class="">
        <p class="text-1xl before:content-['->']">
          I am proficient in many programming languages, but I particularly enjoy <strong
            >Python</strong
          >, absolutely dislike R, and am rather comfortable with <strong
            >JS</strong
          >.
        </p>
        <p class="text-1xl before:content-['->']">
          I am very good at <strong>combining languages/stacks/tools</strong>.
          For instance, this site combines Astro, React, and 3D animations using
          Three.js.
        </p>
      </span>
    </div>

    <div class="md:flex gap-8 items-center md:flex-row-reverse intersect">
      <span class="flex-initial w-[100%] grow text-2xl">
        <h2 class="mb-0">
          <strong
            ><span class="highlight c2 leading-tight"
              >I see the big picture.</span
            ></strong
          >
        </h2>
        <h3 class="hidden leading-tight md:block">It matters!</h3>
      </span>

      <span>
        <p class="text-1xl before:content-['->'] md:text-right">
          I am a <span class="italic">Political Economist</span> by training. Do
          you <strong>need to understand user behaviour</strong>, <strong
            >manage stakeholder disagreement</strong
          >, or <strong
            >figure out complex digital technology regulations</strong
          >? You want me in your team.
        </p>
        <p class="text-1xl before:content-['->'] md:text-right">
          Are you in the <strong>energy</strong>, <strong>food</strong>, <strong>policy</strong>, or
            <strong>sustainability</strong> sectors, where I am a published <span class="italic">domain</span> expert? You need me in your team.
        </p>
      </span>
    </div>
    <br />
    <span>
      <p class="intersect"><strong>Website made with:</strong></p>
      <span class="flex flex-wrap"
        >{
          stack.map((item: string) => (
            <LogoRender label={item} locale={locale} />
          ))
        }</span
      >
    </span>
  </section>

  <section>
    <Latest sectionTitle="Latest" numberOfEntries={6} locale={locale} />
  </section>

  <section class="intersect">
    <Contact locale={locale} />
  </section>
</BaseLayout>
