---
// IMPORTS
import type { Multi } from "@types";
import BaseLayout from "@layouts/BaseLayout.astro";
import LogoRender from "@components/LogoRender.astro";
import Latest from "@components/Latest.astro";
import Contact from "@components/Contact.astro";
import { site } from "@i18n/sections";
import { defaultLang } from "@i18n/ui";

// ACTIONS
// Get locale from folder structure
const locale: keyof Multi = Astro.currentLocale || defaultLang;

// Other
const stack = ["astro", "js", "typescript", "mdx", "tailwind", "threejs"];
---

<BaseLayout
  siteTitle={site.title[locale]}
  description={site.description[locale]}
  pageTitle="Welcome üëã"
  locale={locale}
>
  <section class="homepage">
    <div>
      <p class="intersect text-2xl">
        I am <span class="italic">Jos√© A Bolanos</span>, <strong>
          <span class="">Political Economist gone Software Developer</span
          ></strong
        > with 3+ years of experience in software development and 5+ in research
        and analytics.
      </p>
    </div>

    <div class="md:flex gap-2 intersect py-5">
      <div
        class="w-full md:bg-gray-800 md:dark:bg-gray-900 md:text-white md:border md:border-teal-300 md:dark:border-white md:border-solid md:dark:border-dotted md:p-5"
      >
        <h3 class="underline md:no-underline">Freelance coding</h3>
        <p class="text-sm my-1 text-black">
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#Fullstack</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#AI</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#DigitalSustainability</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#TailoredSoftware</span
          >
        </p>
        <p class="inline md:block">
          I sell solutions, not just code. I adapt to your needs and give you
          code to help you achieve your goals.
        </p>
        <p class="inline">
          See a full list of services <a href="/services/en">here</a>.
        </p>
      </div>

      <div
        class="mt-5 md:mt-0 w-full md:bg-gray-800 md:dark:bg-gray-900 md:text-white md:border md:border-teal-300 md:dark:border-white md:border-solid md:dark:border-dotted md:p-5"
      >
        <h3 class="underline md:no-underline">Strategic Services</h3>
        <p class="text-sm my-1 text-black">
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#Strategy</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#Planning</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#Design</span
          >
          <span class="py-1 px-2 bg-teal-300 rounded-md border border-black"
            >#Implementation</span
          >
        </p>
        <p class="inline md:block">
          Thanks to the mixed background, I understand your digital technology
          challenges from both a technical and a business perspective.
        </p>
        <p class="inline">
          <a href={"mailto:hello@josebolanos.xyz"} target="_blank"
            >Get in touch</a
          > to learn more.
        </p>
      </div>
    </div>

    <br />
    <span>
      <p class="intersect"><strong>Website made with:</strong></p>
      <span class="flex flex-wrap"
        >{
          stack.map((item: string) => (
            <LogoRender label={item} locale={locale} />
          ))
        }</span
      >
    </span>
  </section>

  <section>
    <Latest sectionTitle="Latest" numberOfEntries={6} locale={locale} />
  </section>

  <section class="intersect">
    <Contact locale={locale} />
  </section>
</BaseLayout>
